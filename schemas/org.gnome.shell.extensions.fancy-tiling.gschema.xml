<schemalist>
    <schema id="org.gnome.shell.extensions.fancy-tiling" path="/org/gnome/shell/extensions/fancy-tiling/">
        <key name="overlay-color" type="(ddd)">
            <default>(0.38,0.90,0.66)</default>
            <summary>Zone overlay color</summary>
        </key>
        <key name="overlay-opacity" type="d">
            <default>0.5</default>
            <summary>Zone overlay opacity</summary>
        </key>
        <key name="animate" type="b">
            <default>true</default>
            <summary>Use animation to resize window</summary>
        </key>
        <key name="zone-snap" type="i">
            <default>5</default>
            <summary>Distance to merge zones</summary>
        </key>
        <key name="default-layout" type="s">
            <default>'2x2'</default>
            <summary>Default layout</summary>
        </key>
        <key name="layouts" type="s">
            <default>
                '{"layouts":{"2-1-2":{"zones":{"LeftTop":[0,0,0.3,0.5],"LeftBottom":[0,0.5,0.3,1],"Center":[0.3,0,0.7,1],"RightTop":[0.7,0,1,0.5],"RightBottom":[0.7,0.5,1,1]}},"2x2":{"zones":{"1":[0,0,0.5,0.5],"2":[0.5,0,1,0.5],"3":[0,0.5,0.5,1],"4":[0.5,0.5,1,1]}}}}'
            </default>
        </key>
    </schema>
</schemalist>